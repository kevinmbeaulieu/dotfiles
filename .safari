#!/usr/bin/env zsh

# Increase Safari Reader article width to 1.5x default

cp /System/Library/PrivateFrameworks/SafariShared.framework/Versions/A/Resources/Reader.html /System/Library/PrivateFrameworks/SafariShared.framework/Versions/A/Resources/Reader-original.html

perl -pe 's|</head>|    <style id="custom-reader-width">\n    \@media only screen and (min-width: 780px) {\n        body.system #article { max-width: calc(83.2ex * 1.5); }\n        body.athelas #article { max-width: calc(104ex * 1.5); }\n        body.charter #article { max-width: calc(86ex * 1.5); }\n        body.georgia #article { max-width: calc(94ex * 1.5); }\n        body.iowan #article { max-width: calc(90ex * 1.5); }\n        body.palatino #article { max-width: calc(97ex * 1.5); }\n        body.seravek #article { max-width: calc(87ex * 1.5); }\n        body.times #article { max-width: calc(97ex * 1.5); }\n    }\n    </style>\n</head>|g' < /System/Library/PrivateFrameworks/SafariShared.framework/Versions/A/Resources/Reader-original.html > /System/Library/PrivateFrameworks/SafariShared.framework/Versions/A/Resources/Reader.html
